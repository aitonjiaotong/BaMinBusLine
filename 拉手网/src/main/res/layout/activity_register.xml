<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                tools:context="com.zhangjiebo.grouppurchase.RegisterActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        >

        <ImageView
            android:src="@mipmap/icon_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView54"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"/>

        <TextView
            android:id="@+id/textView78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="25sp"/>

    </RelativeLayout>

    <LinearLayout
        android:background="#dddddd"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:textColor="#ffffff"
                android:background="@drawable/enter_btn_shape01"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="获取验证码"
                android:id="@+id/sms_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:paddingLeft="10dp"
                android:hint="输入手机号"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/phonenum"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:background="#dddddd"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"/>

        <EditText
            android:maxLength="4"

            android:paddingLeft="10dp"
            android:hint="输入短信验证码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/sms_yanzheng"/>

        <LinearLayout
            android:background="#dddddd"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:password="true"
                android:paddingLeft="10dp"
                android:hint="请设置登录密码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/password_edit01"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:src="@mipmap/hide_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hide_passrord"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="24dp"/>
        </RelativeLayout>

        <LinearLayout
            android:background="#dddddd"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"/>

        <EditText
            android:password="true"
            android:paddingLeft="10dp"
            android:hint="确认登录密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/password_edit02"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录密码为6位以上数字和字母组合，区分大小写"
        android:id="@+id/textView79"/>

    <Button
        android:enabled="false"
        android:background="@drawable/register_btn_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/regeister_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
</LinearLayout>
