<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/head0301_rela"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/dongtianlaile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView19"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冬天来了"
                    android:id="@+id/textView21"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对自己好一点"
                    android:id="@+id/textView22"
                    android:layout_below="@+id/textView21"
                    android:layout_alignLeft="@+id/textView21"
                    android:layout_alignStart="@+id/textView21"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:background="#dddddd"
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>

            <RelativeLayout
                android:id="@+id/head0302_rela"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/meiweijiayouhui"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView20"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美味+实惠"
                    android:id="@+id/textView23"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如您所愿"
                    android:id="@+id/textView24"
                    android:layout_below="@+id/textView23"
                    android:layout_alignLeft="@+id/textView23"
                    android:layout_alignStart="@+id/textView23"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:background="#dddddd"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/head0303_rela"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/handouxiong"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView21"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="憨豆熊"
                    android:id="@+id/textView25"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="喊你搬坚果啦"
                    android:id="@+id/textView26"
                    android:layout_below="@+id/textView25"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:background="#dddddd"
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>

            <RelativeLayout
                android:id="@+id/head0304_rela"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/songwennuan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView22"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="初冬送暖"
                    android:id="@+id/textView27"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时尚与温暖同行"
                    android:id="@+id/textView28"
                    android:layout_below="@+id/textView27"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:background="#dddddd"
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>

            <RelativeLayout
                android:id="@+id/head0305_rela"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/haige"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView23"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="嗨歌约起"
                    android:id="@+id/textView29"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等你来"
                    android:id="@+id/textView30"
                    android:layout_below="@+id/textView29"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>