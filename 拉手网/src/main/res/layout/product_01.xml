<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_secking"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/product_img01"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:background="#32000000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/product_img01"
            android:layout_centerHorizontal="true">

            <TextView
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17.5影城单人电影票"
                android:id="@+id/textView20"/>

            <TextView
                android:textColor="#ffffff"

                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"

                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单人电影票，可观看2D/3D"
                android:id="@+id/textView47"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#ff5c0c"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥35"
            android:id="@+id/textView48"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:background="@mipmap/bg_sort_selected"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="立即购买"
            android:id="@+id/textView49"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"

            />
    </RelativeLayout>

    <LinearLayout
        android:background="#dddddd"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="right"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="随时退"
                    android:id="@+id/textView50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:src="@mipmap/ic_support_tui"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView34"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView50"
                    android:layout_toStartOf="@+id/textView50"
                    android:layout_marginRight="5dp"

                    />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="过期退"
                    android:id="@+id/textView68"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:src="@mipmap/ic_support_guoqi"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView49"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView68"
                    android:layout_toStartOf="@+id/textView68"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售1"
                    android:id="@+id/textView69"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:src="@mipmap/count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView50"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView69"
                    android:layout_toStartOf="@+id/textView69"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>