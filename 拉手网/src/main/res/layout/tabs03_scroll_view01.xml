<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:background="@mipmap/my_login_bg"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="您还没有登录哦"
                android:id="@+id/textView16"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"/>

            <Button
                android:background="@drawable/mine_btn_shape"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="登录"
                android:id="@+id/enter_btn"
                android:layout_below="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>

        <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:src="@mipmap/user_icon_lashouquan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView14"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                       />

                    <TextView
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拉手券"
                        android:id="@+id/textView17"
                        android:layout_below="@+id/imageView14"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:background="#dddddd"
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:src="@mipmap/user_icon_favortite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView15"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:id="@+id/textView18"
                        android:layout_below="@+id/imageView15"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:background="#dddddd"
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:src="@mipmap/user_icon_history"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView16"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近浏览"
                        android:id="@+id/textView19"
                        android:layout_below="@+id/imageView16"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>